# Environment variables for production deployment
# Copy this file to .env and update with your values

# Docker image (update với Docker Hub username của bạn)
DOCKER_IMAGE=your-username/library-management:latest

# Database credentials
POSTGRES_PASSWORD=your-secure-password-here

# Application settings
SPRING_PROFILES_ACTIVE=prod

# Optional: If using external database
# SPRING_DATASOURCE_URL=jdbc:postgresql://external-db:5432/librarydb
# SPRING_DATASOURCE_USERNAME=dbuser
# SPRING_DATASOURCE_PASSWORD=dbpass
